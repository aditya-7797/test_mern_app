{

  "name": "interior_design_website",

  "version": "1.0.0",

  "private": true,

  "scripts": {

    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",

    "start:client": "set PORT=3001 && npm start --prefix client",

    "start:server": "cd backend && npm run dev",

    "client": "set PORT=3001 && npm start --prefix client",

    "build": "npm ci --prefix client && npm run build --prefix client"

  },

  "dependencies": {

    "bootstrap": "^5.3.3",

    "mongodb": "^6.8.0",

    "mongoose": "^8.5.3",

    "react-icons": "^5.3.0"

  },

  "devDependencies": {

    "concurrently": "^8.2.2"

  }

}

